{
  "name": "matrix-slicer",
  "version": "3.0.0-alpha",
  "description": "Slices a matrices into columns, rows, diagonals and submatrices.",
  "main": "src/index.js",
  "scripts": {
    "coveralls": "node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "lint": "./node_modules/.bin/eslint ./",
    "test": "mocha ./test --require @babel/register",
    "test:watch": "yarn test --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahtohbi4/matrix-slicer.git"
  },
  "keywords": [
    "matrix",
    "column",
    "row",
    "diagonal",
    "element",
    "submatrix",
    "slice",
    "split"
  ],
  "author": "Alexandr Antonov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ahtohbi4/matrix-slicer/issues"
  },
  "files": [
    "index.js",
    "README.md"
  ],
  "homepage": "https://ahtohbi4.github.io/matrix-slicer/",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^5.12.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "import/prefer-default-export": "off",
      "indent": [
        "error",
        4,
        { "SwitchCase": 1 }
      ],
      "semi": ["error", "always"],
      "strict": "off"
    }
  }
}
